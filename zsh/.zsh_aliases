# general aliases
alias -- -="cd -"
alias ~="cd ~"
alias ls="ls --color=auto"
alias la="ls -a"
alias ll="ls -la"

# git aliases
alias gi="git init"
alias gs="git status"
alias gd="git diff"
alias gds="git diff --staged"
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gp="git push"
alias gpo="git push origin"
alias gpu="git pull origin"
alias gco="git checkout"
alias gl="git log"
alias glo="git log --oneline"
alias gf="git fetch"
alias gr="git remote -v"
alias gcl="git clone"
# use github/hub package
alias git="hub"

# django aliases
alias m="python manage.py"
alias bm="./bin/manage"
alias bmr="./bin/manage runserver"
alias bmc="./bin/manage collectstatic"
alias bmm="./bin/manage migrate"

# other aliases
alias offline="wget --mirror --convert-links --backup-converted --no-clobber --adjust-extension"
alias timelog="time-log" ### npm install -g time-log
alias clipcopy="xclip -sel clip <"
alias st="speed-test" ### npm install -g speed-test
