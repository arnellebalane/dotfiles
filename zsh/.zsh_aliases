# general aliases
alias ls="ls --color=auto"
alias la="ls -a"
alias ll="ls -l"
alias lla="ls -la"

# git aliases
alias gi="git init"
alias gs="git status"
alias gd="git diff"
alias gds="git diff --staged"
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gp="git push"
alias gpo="git push origin"
alias gpu="git pull origin"
alias gco="git checkout"
alias gl="git log"
alias glo="git log --oneline"
alias gf="git fetch"
alias gr="git remote -v"
alias gcl="git clone"
alias gsit="git stash --include-untracked"
alias gsp="git stash pop"
